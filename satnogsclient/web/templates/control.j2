{% extends "base.j2" %}
{% set active_page = "control" %}

{% block title %} - Control{% endblock %}

{% block content %}
  <div class="container">
    <h1>Control</h1>
    <div class="panel panel-default">
      <div class="panel-heading">Command</div>
      <div class="panel-body">
        <div class="row" id="switch-panel">
          <div class="col-md-7" id="command-col">
            <div class="row">
              <div class="col-xs-6 col-md-6">
                <div class="inline-label-bold">Comms TX status</div>
                <div id="comms-on-off">
                  <div class="btn-group" role="group">
                    <button type="button" class="btn label-success" name="comms-tx-on" id="comms-tx-on">ON</button>
                    <button type="button" class="btn label-danger" name="comms-tx-off" id="comms-tx-off">OFF</button>
                  </div>
                </div>
              </div>
              <div class="col-xs-6 col-md-6">
                  <div class="inline-label-bold">Backend</div>
                  <div>
                    <div class="btn-group" role="group">
                      <button type="button" class="btn label-success" name="" id="comms-tx-on">GNURadio</button>
                      <button type="button" class="btn label-danger" name="" id="comms-tx-off">Serial</button>
                    </div>
                  </div>
              </div>
            </div>
            <hr>
            <div class="row" id="service-panel">
              <label for="">Services</label>
              <div id="service-panel">
                <select multiple class="form-control" id="service-select">
                  <option id="time-select">Time</option>
                  <option id="power-select">Power</option>
                  <option id="test-select">Test</option>
                  <option id="custom-select">Custom</option>
                </select>
              </div>
              <div id="service-param-panel">
                <div id="service-param-custom" style="display:none;">
                  <div class="dropdown-group-inline">
                    <select id="service-param-app_id" class="form-control">
                      <option selected="true" style="display:none;">App ID</option>
                      <option value="1" >OBC</option>
                      <option value="2" >EPS</option>
                      <option value="3" >ADCS</option>
                      <option value="4" >COMMS</option>
                      <option value="6" >GND</option>
                      <option value="7" >UMB</option>
                    </select>
                    <select id="service-param-type" class="form-control">
                      <option selected="true" style="display:none;">Type</option>
                      <option value="0" >TM</option>
                      <option value="1" >TC</option>
                    </select>
                    <select id="service-param-ack" class="form-control">
                      <option selected="true" style="display:none;">ACK</option>
                      <option value="0" >NO ACK</option>
                      <option value="1" >ACK</option>
                    </select>
                    <select id="service-param-service_type" class="form-control">
                      <option selected="true" style="display:none;">Service Type</option>
                      <option value="1" >TC_VERIFICATION_SERVICE</option>
                      <option value="3" >TC_HOUSEKEEPING_SERVICE</option>
                      <option value="5" >TC_EVENT_SERVICE</option>
                      <option value="8" >TC_FUNCTION_MANAGEMENT_SERVICE</option>
                      <option value="9" >TC_TIME_MANAGEMENT_SERVICE</option>
                      <option value="11" >TC_SCHEDULING_SERVICE</option>
                      <option value="13" >TC_LARGE_DATA_SERVICE</option>
                      <option value="15" >TC_MASS_STORAGE_SERVICE</option>
                      <option value="17" >TC_TEST_SERVICE</option>
                      <option value="18" >TC_SU_MNLP_SERVICE</option>
                    </select>
                    <select id="service-param-service_subtype" class="form-control">
                      <option selected="true" style="display:none;">Service sub Type</option>
                    </select>
                    <select id="service-param-dest_id" class="form-control">
                      <option selected="true" style="display:none;">Dest ID</option>
                      <option value="1" >OBC</option>
                      <option value="2" >EPS</option>
                      <option value="3" >ADCS</option>
                      <option value="4" >COMMS</option>
                      <option value="6" >GND</option>
                      <option value="7" >UMB</option>
                    </select>
                  </div>
                  <div class="row">
                    <label> Application Data: </label>
                    <input type="text" id="service-param-service-data">
                  </div>
                  <div class="row">
                    <button class="btn btn-primary" id="test2"> Send </button>
                  </div>
                </div>
                <div id="service-param-test" style="display:none;">
                  <div class="dropdown-group-inline">
                    <select id="service-param-test-app_id" class="form-control">
                      <option selected="true" style="display:none;">App ID</option>
                      <option value="1" >OBC</option>
                      <option value="2" >EPS</option>
                      <option value="3" >ADCS</option>
                      <option value="4" >COMMS</option>
                    </select>
                    <select id="service-param-test-dest_id" class="form-control">
                      <option selected="true" style="display:none;">Dest ID</option>
                      <option value="6" >GND</option>
                      <option value="7" >UMB</option>
                    </select>
                  </div>
                  <div class="row">
                    <button class="btn btn-primary" id="test3"> Send </button>
                  </div>
                </div>
                <div id="service-param-power" style="display:none;">
                  <div class="dropdown-group-inline">
                    <select id="service-param-dev-id" class="form-control">
                      <option selected="true" style="display:none;">App ID</option>
                      <option value="1" >OBC_DEV_ID</option>
                      <option value="2" >EPS_DEV_ID</option>
                      <option value="3" >ADCS_DEV_ID</option>
                      <option value="4" >COMMS_DEV_ID</option>
                      <option value="5" >IAC_DEV_ID</option>
                      <option value="6" >SU_DEV_ID</option>
                      <option value="7" >GPS_DEV_ID</option>
                      <option value="8" >OBC_SD_DEV_ID</option>
                      <option value="9" >ADCS_SD_DEV_ID</option>
                      <option value="10" >ADCS_SENSORS</option>
                      <option value="11" >ADCS_GPS</option>
                      <option value="12" >ADCS_MAGNETO</option>
                      <option value="13" >ADCS_SPIN</option>
                      <option value="14" >ADCS_GPS</option>
                      <option value="15" >ADCS_GPS</option>
                    </select>
                    <select id="service-param-function" class="form-control">
                      <option selected="true" style="display:none;">Type</option>
                      <option value="1" >ON</option>
                      <option value="2" >OFF</option>
                    </select>
                    <select id="service-param-power-ack" class="form-control">
                      <option selected="true" style="display:none;">ACK</option>
                      <option value="0" >NO ACK</option>
                      <option value="1" >ACK</option>
                    </select>
                    <select id="service-param-power-dest_id" class="form-control">
                      <option selected="true" style="display:none;">Dest ID</option>
                      <option value="6" >GND</option>
                      <option value="7" >UMB</option>
                    </select>
                  </div>
                  <div class="row">
                    <button class="btn btn-primary" id="test1"> Send </button>
                  </div>
                </div>
              </div>
            </div>
            <hr>
            <div class="row">
              <!--<form enctype="multipart/form-data">
                  <input name="file" type="file" />
                  <input type="button" value="Upload" />
                  <progress></progress>
              </form>-->
              <form method="post" action="" enctype="multipart/form-data" novalidate="" class="box has-advanced-upload">
                <div class="box__input">
                   <svg class="box__icon" xmlns="http://www.w3.org/2000/svg" width="50" height="43" viewBox="0 0 50 43">
                    <path d="M48.4 26.5c-.9 0-1.7.7-1.7 1.7v11.6h-43.3v-11.6c0-.9-.7-1.7-1.7-1.7s-1.7.7-1.7 1.7v13.2c0 .9.7 1.7 1.7
                            1.7h46.7c.9 0 1.7-.7 1.7-1.7v-13.2c0-1-.7-1.7-1.7-1.7zm-24.5 6.1c.3.3.8.5 1.2.5.4 0 .9-.2 1.2-.5l10-11.6c.7-.7.7-1.7
                            0-2.4s-1.7-.7-2.4 0l-7.1 8.3v-25.3c0-.9-.7-1.7-1.7-1.7s-1.7.7-1.7 1.7v25.3l-7.1-8.3c-.7-.7-1.7-.7-2.4 0s-.7 1.7 0 2.4l10
                             11.6z">
                    </path>
                  </svg>
                  <input type="file" name="files[]" id="file" class="box__file" data-multiple-caption="{count} files selected" multiple="">
                  <label for="file"><strong>Choose a file</strong></label>
                  <button type="submit" class="btn btn-primary box__button">Upload</button>
                </div>
                <div class="box__uploading">Uploadingâ€¦</div>
                <div class="box__success">Done! <a href="https://css-tricks.com/examples/DragAndDropFileUploading//?submit-on-demand" class="box__restart" role="button">Upload more?</a></div>
                <div class="box__error">Error! <span></span>. <a href="https://css-tricks.com/examples/DragAndDropFileUploading//?submit-on-demand" class="box__restart" role="button">Try again!</a></div>
                <input type="hidden" name="ajax" value="1">
              </form>
            </div>
          </div>
          <div class="col-md-5">
            <div class="panel panel-primary" id="response-panel">
              <div class="panel-heading">WOD</div>
              <div class="panel-body" id="response-panel-body">
              </div>
            </div>
            <div class="panel panel-primary" id="response-panel">
              <div class="panel-heading">Terminal</div>
              <div class="panel-body" id="response-panel-body">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

{% endblock %}
{% block js %}
<script src="{{ url_for('static', filename='js/satnogs-control.js') }}"></script>
{% endblock %}
